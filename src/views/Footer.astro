---
import T from "../../content/lib/T.astro";
import t from "../../content/lib/t";

const footerLinks = [
  { label: t("Home"), href: "/#home" },
  { label: t("About"), href: "/#about" },
  { label: t("Portfolio"), href: "/#portfolio" },
  { label: t("Contact"), href: "/#contact" },
];

const year = new Date().getFullYear();
---

<footer class="px-4 max-w-4xl mx-auto">
  <div
    class="border-t border-azure-6 py-4 flex flex-col md:flex-row md:items-center justify-between"
  >
    <p
      class="order-2 md:order-1 flex gap-[1ch] items-center text-azure-6 font-mono text-xs mt-4 md:mt-0"
    >
      <T
        text="{year} {separator} Generated by {ai} + {me}"
        values={{
          year,
          separator: "true",
          ai: "true",
          me: "true",
        }}
        class="flex gap-[1ch]"
      >
        <span slot="year">{year}</span>
        <span slot="separator" class="font-display">————</span>
        <span slot="ai" class="font-display">AI</span>
        <a slot="me" href="/#home"> Luis Emidio </a>
      </T>
    </p>

    <nav class="order-1 pb-4 md:order-2 flex gap-2 flex-wrap">
      {
        footerLinks.map((link) => (
          <ul>
            <li>
              <a
                href={link.href}
                class="text-sm font-medium mb-2 md:mb-0 text-azure-6 hover:text-azure-7"
              >
                {link.label}
              </a>
            </li>
          </ul>
        ))
      }
    </nav>
  </div>
</footer>
