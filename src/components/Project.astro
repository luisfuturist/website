---
import { getLocale } from "../../content/lib/state";
import type { Repo } from "../utils/github";
import Icon from "./Icon";
import Link from "./Link";

interface Props extends Repo {
  i: number;
  class?: string;
}

const { i, class: className, ...repo } = Astro.props;

const locale = getLocale()
---

<article
  class:list={[
    "border border-azure-6 dark:border-azure-6 min-h-36 flex w-full h-full flex-col justify-between rounded-lg p-4",
    className,
  ]}
>
  <div class="w-full">
    <header>
      <h1
        class="text-azure-2 dark:text-azure-6 mb-4 font-medium font-mono"
        class:list={[i === 0 ? "text-2xl" : "text-lg"]}
      >
        <a target="_blank" href={repo.website || repo.html_url}>
          {repo.name}
        </a>
      </h1>
    </header>

    <main>
      <p class="text-azure-2 dark:text-azure-9 mb-4 leading-5">{repo.description}</p>

      <ul class="text-azure-4 dark:text-azure-5 flex justify-end gap-1 flex-wrap text-xs">
        {
          repo.keywords.map((keyword) => (
            <li class="bg-azure-5/10 dark:bg-azure-6/10 rounded-lg px-2">{keyword}</li>
          ))
        }
      </ul>
    </main>
  </div>

  <footer>
    <div class="flex gap-1 flex-wrap items-center justify-between mt-4">
      <div class="text-azure-4 dark:text-azure-9 flex gap-2">
        <Link target="_blank" class="no-underline" href={repo.html_url}>
          <Icon name="code" />
        </Link>
        <Link target="_blank" class="no-underline" href={repo.website}>
          <Icon name="globe" />
        </Link>
      </div>

      <small class="font-mono text-azure-2 dark:text-azure-6">
        {
          new Date(repo.updated_at).toLocaleString(locale, {
            dateStyle: "medium",
          })
        }
      </small>
    </div>
  </footer>
</article>
